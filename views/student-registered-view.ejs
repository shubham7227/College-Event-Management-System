<%- include("partials/header2", {title: "Registered Event"}) %>

<body>
  <header class="site-header">
    <div class="header-bar">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="col-10 col-lg-4">
            <h1 class="site-branding flex">
              <a href="/club-profile">Event Manager</a>
            </h1>
          </div>

          <div class="col-2 col-lg-8">
            <nav class="all-header">
              <a class="boton" href="/student-index">HOME</a>
              <a class="boton" href="/student-profile">PROFILE</a>
              <a class="boton" href="/logout">LOGOUT</a>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </header>

  <div class="event-reg-form">
    <div class="main-content">
      <div class="container">
        <div class="entry-header">
          <div class="entry-title">
            <div class="row">
              <div class="col-md-10">
                <h2>View Event</h2>
              </div>
              <div class="col-md-2">
                <a href="/student-profile">
                  <div class="btn btn-primary">BACK</div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="event-reg">
      <% specEvent.forEach(events => { %>
      <div class="form-group">
        <div class="poster-img">
          <img
            id="output"
            src="images/uploaded_image/<%= events.poster %>"
            alt="poster"
          />
        </div>
      </div>
      <div class="form-group">
        <div style="text-align: center"><h2><%= events.ename %></h2></div>
      </div>
      <div class="form-group">
        <p
          style="
            font-size: 22px;
            line-height: 0.8cm;
            text-align: left;
            font-weight: 400;
          "
        >
          <%= events.remarks %>
        </p>
      </div>
      <div class="row">
        <div style="padding: 1.5%" class="col-md-1">
          <i
            style="font-size: 28px; color: rgb(139, 139, 141); padding: 2%"
            class="fas fa-location-arrow"
          ></i>
        </div>
        <div class="col-md-10">
          <p style="font-size: 26px; font-weight: 600"><%= events.venue %></p>
        </div>
      </div>
      <div class="row">
        <div style="padding: 1%" class="col-md-1">
          <i
            style="font-size: 28px; color: rgb(139, 139, 141)"
            class="fas fa-calendar-alt"
          ></i>
        </div>
        <div class="col-md-10">
          <p style="font-size: 26px; font-weight: 600"><%= events.dat %></p>
        </div>
      </div>

      <p style="font-size: 26px; font-weight: 600">Organized By:</p>
      <div class="row">
        <div style="padding: 1.5%; text-align: right" class="col-md-2">
          <i
            style="font-size: 28px; color: rgb(139, 139, 141)"
            class="fas fa-id-badge"
          ></i>
        </div>
        <div class="col-md-6">
          <p style="font-size: 26px; font-weight: 600"><%= club[0].cname %></p>
        </div>
      </div>
      <div class="row">
        <div style="padding: 1.5%; text-align: right" class="col-md-2">
          <i
            style="font-size: 28px; color: rgb(139, 139, 141)"
            class="far fa-envelope"
          ></i>
        </div>
        <div class="col-md-6">
          <p style="font-size: 26px; font-weight: 600"><%= club[0].email %></p>
        </div>
      </div>
      <div class="row">
        <div style="padding: 1%; text-align: right" class="col-md-2">
          <i
            style="font-size: 32px; color: rgb(139, 139, 141)"
            class="fas fa-phone"
          ></i>
        </div>
        <div class="col-md-6">
          <p style="font-size: 26px; font-weight: 600"><%= club[0].phno %></p>
        </div>
      </div>
    </div>
    <% }); %>
  </div>

  <%- include("partials/footer2") %>
</body>
